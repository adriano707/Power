@page
@model Power.Pages.Ring.CreateModel

<h4>Ring</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group pt-2">
                <label asp-for="Poder" class="control-label"></label>
                <input asp-for="Poder" class="form-control" />
                <span asp-validation-for="Poder" class="text-danger"></span>
            </div>
            <div class="form-group pt-2">
                <label asp-for="Portador" class="control-label"></label>
                <input asp-for="Portador" class="form-control" />
                <span asp-validation-for="Portador" class="text-danger"></span>
            </div>
            <div class="form-group pt-2">
                <label asp-for="Forjador" class="control-label"></label>
                <select asp-for="Forjador" class="form-control" asp-items="Model.RingPower"></select>
                <span asp-validation-for="Forjador" class="text-danger"></span>
            </div>
            <div class="form-group pt-2">
                <label asp-for="Imagem" class="control-label"></label>
                <input asp-for="Imagem" class="form-control" />
                <span asp-validation-for="Imagem" class="text-danger"></span>
            </div>
            <div class="form-group pt-3 d-flex gap-2">
                <input type="submit" value="Salvar" class="btn btn-lg btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">Voltar para Listagem</a>
            </div>
        </form>
    </div>
</div>

