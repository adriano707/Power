@page
@model Power.Pages.Ring.IndexModel

<p>
    <a asp-page="Create" class=" btn btn-primary">Novo</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ring[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ring[0].Power)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ring[0].Carrier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ring[0].ForgedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ring[0].Image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Ring) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Power)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Carrier)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ForgedBy)
            </td>
            <td>
                <img src="@item.Image" width="100"/>
            </td>
            <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-secondary">Editar</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info">Detalhes</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
